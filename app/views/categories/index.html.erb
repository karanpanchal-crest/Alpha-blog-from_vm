<h1 align="center"><strong>All Categories</strong></h1>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <div class="row center">
      <div class="well col-md-4 col-md-offset-4">
        <div align="center" style="font-size:20px;font-weight:bold;"><%= link_to category.name.upcase, category_path(category) %></div>
	<div align="center" style="margin-top:10px;font-color:#707070;"><%= pluralize(category.articles.count, "article") %></div>
      </div>
    </div>
  <% end %>
  <%= will_paginate %>
</div>

