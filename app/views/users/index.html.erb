<h2 align="center"><strong> Listing all Users</strong></h2>
<div align="center">
 <div align="center"><%= will_paginate @users %></div>
  <% @users.each do |user| %>
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <div class="listing">
          <%= link_to gravatar_for(user, size: 150), user_path(user) %>
          <div class="article-title" style="margin-left:10px;"><%= link_to user.username, user_path(user) %></div>
          <div><%= pluralize(user.articles.count, "articles") %></div>
          <% if logged_in? and current_user.admin? %>
            <div><%= link_to 'Delete the user and all its articles', user_path(user), method: :delete, data:{confirm: "Are you sure you want to delete the user and all its articles"}, class: "btn btn-danger btn-sm" %></div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div align="center"><%= will_paginate @users %></div>
</div>
